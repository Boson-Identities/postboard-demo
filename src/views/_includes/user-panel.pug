+card('Shout something', user.friendlyId)
  form(method='POST' action='/user/post')
    .form-group
      input(type="text", name="title", placeholder="Your title", maxlength=MAX_TITLE_LENGTH, disabled=!user.loggedIn).form-control
    .form-group
      textarea(name="shout", placeholder="Let the world hear your roar!" rows=3, maxlength=MAX_SHOUT_LENGTH, disabled=!user.loggedIn).form-control
      small#shout-count.form-text.text-muted.float-right 70
    .form-group
      input(type="submit", value="Post", disabled=!user.loggedIn, class=user.loggedIn && 'btn-primary').btn
  if user.loggedIn
    a(href='/user/logout').btn.btn-sm.btn-secondary Log-out
  else
    a(href=bosonLoginUri).btn.btn-sm.btn-primary Log-in
